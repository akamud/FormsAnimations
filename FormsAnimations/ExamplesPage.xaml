<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsAnimations.ExamplesPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Switch x:Name="isAnimatedSwitch" IsToggled="False"/>
            <Label Text="Animação" />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Switch x:Name="isAnimatedBonitaoSwitch" IsToggled="False"/>
            <Label Text="Animação Bonitona" />
        </StackLayout>

        <Button x:Name="btnRating" Text="Rating" />
    </StackLayout>
</ContentPage>